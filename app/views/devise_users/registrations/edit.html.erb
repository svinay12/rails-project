<div class="container" >
  <div class="row justify-content-center login">
    <div class="col-lg-6 col-md-10 d-flex flex-column align-items-center justify-content-center mt-2 bg-white shadow-lg" >
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h2 class="mt-1 mb-2 text-center">Edit Information</h2>
        <%= render "devise_users/shared/error_messages", resource: resource %>
        <div class="row">

          <div class="field  m-4 mt-1 col-lg-5 col-md-8">
            <%= f.label :name ,:class => 'form-label '%><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" ,:class => 'form-control'%>
          </div>
          <div class="field  m-4 mt-1 col-lg-5 col-md-8">
            <%= f.label :mobile ,:class => 'form-label '%><br />
            <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile" ,:class => 'form-control'%>
          </div>
          <div class="field  m-4 mt-1 col-lg-5 col-md-8">
            <%= f.label :mobile ,:class => 'form-label '%><br />
            <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile" ,:class => 'form-control'%>
          </div>
          <div class="field  m-4 mt-1 col-lg-5 col-md-8">
            <%= f.label :email ,:class => 'form-label '%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class => 'form-control'%>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="field  m-4 mt-1 col-lg-5 col-md-8">
            <%= f.label :password ,:class => 'form-label '%> <br />
            <%= f.password_field :password, autocomplete: "new-password",:class => 'form-control' %>
            
          </div>
          <div class="field  m-4 mt-1 col-lg-5 col-md-8">
            <%= f.label :password_confirmation ,:class => 'form-label '%><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",:class => 'form-control' %>
          </div>
          <div class="field  m-4 mt-1 col-lg-5 col-md-8">
            <%= f.label :current_password ,:class => 'form-label '%> <br />
            <%= f.password_field :current_password, autocomplete: "current-password",:class => 'form-control' %>
          </div>

          <div class="field  m-4 mt-4 col-lg-5 col-md-8">
            <%= f.radio_button :user_type, 'client', :class => 'form-check-input' %> Client<br>
            <%= f.radio_button :user_type, 'builder', checked: true , :class => 'form-check-input' %> Builder
          </div>
          <div class="actions  m-4 mt-1 col-lg-5 col-md-8">
            <%= link_to "Back", :back ,:class =>'btn btn-primary p-1 me-4'%>
            <%= f.submit "Update",:class => ' btn-warning'%>
          </div>
          
          <div class="m-4 col-11 mt-1 border border-danger">
            <h3>Cancel my account</h3>
            <div>
             <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete,:class =>'btn-danger mb-2' %>
            </div>            
          </div>
        </div>
          
      <% end %>
    </div>
  </div>
</div>