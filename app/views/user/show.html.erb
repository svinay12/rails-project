<div class="container-fluid bg-white p-3">
  <div class="row p-2">
    <!-- ====================  profile section  ==================== -->
    <div class="col-lg-4 col-md-12 col-sm-12">
      <div class="row">
        <div class="col-lg-12 col-md-4 col-sm-12 text-center">
          <%= image_tag @user.profile_image , height: 70, width: 70, class: 'rounded-circle shadow-lg'  %>
          <h5><%=  @user.user_type.capitalize %></h5>
        </div>
        <div class="col-lg-12 col-md-8 col-sm-12 card shadow-lg p-2">          
          <%= render 'show_personal_information' %> 
          <%= render 'show_address', address: @address %> 
        </div>
      </div>
    </div>
    <!-- =========================================================== -->
    <div class="col-lg-8 col-md-12 col-sm-12">
      <div class="">
        <div class="card">
            <div class="card-body pt-3">
              <!-- ================== Tab section ================== -->
              <ul class="nav nav-tabs nav-tabs-bordered">
                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Projects</button>
                </li>
                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Properties</button>
                </li>                 
              </ul>
              <!-- ================================================= -->
              <div class="tab-content pt-2">
                <!-- ==========================  Tab 1  ========================== -->
                <div class="tab-pane fade show active projects" id="profile-overview">
                  <h5 class="card-title mt-3">Projects</h5>  
                    <% if @user.id == current_user.id%>
                      <div class="text-end p-2">
                       <%= link_to '+ Add Project', new_project_path,  {:remote => true, 'data-bs-toggle' =>  "modal", 'data-bs-target' => '#new-project-modal-window', class: 'btn btn-primary'} %>
                    </div> 
                    <% end %>
                    <%= render partial:'project/show_project' %> 
                </div>
                <!-- ==========================  Tab 2  ========================== -->
                <div class="tab-pane fade properties" id="profile-change-password">
                  <h5 class="card-title mt-3">Properties </h5>
                  <% if @user.id == current_user.id%>
                    <div class="text-end p-2">
                      <%= link_to '+ Add Property', new_property_path,  {:remote => true, 'data-bs-toggle' =>  "modal", 'data-bs-target' => '#new-project-modal-window', class: 'btn btn-primary'} %>
                    </div>
                  <% end %>
                  <%= render partial:'property/show_property' %>
                </div>
                <!-- ============================================================= -->
              </div>
            </div>
          </div>        
      </div>
    </div>    
  </div> 
</div>
<!-- ================================== modal body ================================== -->
<div id="new-project-modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg " role="document">
    <div class="modal-content text-start"></div>
  </div>
</div>
<!-- ================================================================================ -->
