<section class="section profile">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-3">
          <div class="card">
            <div class="card-body profile-card  pt-4 text-center row">

              <div class="col-lg-12 col-md-4">
                <%= image_tag 'default_profile.png', height: 70, width: 70, class: 'rounded-circle'  %>
                <h2><%=  @user.name %></h2>
                <h5><%=  @user.user_type %></h5>
              </div>

              <div class="col-lg-12 col-md-8 m-0 p-0 text-start border border-warning ">
                
                <div class="row m-0 p-0 ps-1">
                  <div class="col-4" >Name</div>
                  <div class="col-8" ><%=  @user.name %></div>
                </div>

                <div class="row m-0 p-0 ps-1">
                  <div class="col-4" >Address</div>
                  <div class="col-8" >.......</div>
                </div>

                <div class="row m-0 p-0 ps-1">
                  <div class="col-4">Phone</div>
                  <div class="col-8"><%=  @user.mobile %></div>
                </div>

                <div class="row m-0 p-0 ps-1">
                  <div class="col-4" >Email</div>
                  <div class="col-8" ><%=  @user.email %></div>
                </div>
                
              </div> 
              <div class="text-end me-3">
                  <%= link_to '<button type="button" class="btn btn-warning has-tooltip p-0 ps-1 pe-1" data-placement="left" title="update"> <i class="fa fa-pencil"></i> </button>'.html_safe, edit_user_registration_path,  {remote: :true, 'data-toggle': 'modal', 'data-target': '#modal-window'} %>
                </div>             

              <div class="social-links mt-2">
                <a href="#" class="twitter m-3"> <i class="bi bi-twitter"> </i></a> 
                <a href="#" class="facebook m-3"> <i class="bi bi-facebook"> </i></a>
                <a href="#" class="instagram m-3"> <i class="bi bi-instagram"> </i></a>
                <a href="#" class="linkedin m-3"> <i class="bi bi-linkedin"> </i></a>
              </div>

            </div>
          </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-9">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Projects</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Properties</button>
                </li>

                 <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                </li>
              </ul>

              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                  <h5 class="card-title mt-3">Projects</h5>  
                  <!-- Work in Progress .... -->
                </div>

                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                  <div class="  ">
                  	
                  </div>
                </div>

                <div class="tab-pane fade" id="profile-change-password">
                  <h5 class="card-title mt-3">Properties </h5>         
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>  